<h1><%= @article.title %></h1>
<p><%= @article.url %></p>

<p><%= @article.body %></p>
<p>Karma: <%= @article.karma %></p>

<% @article.comments.each do |comment| %>
<div class="well">
  <p>
    <%= comment.body %>
  </p>
  <p>
    <%= User.find(comment.author_id).username %>
  </p>
  <aside>
    Created <%= time_ago_in_words(comment.created_at) %> ago
  </aside>
  <%= link_to "reply", new_article_comment_path(@article) %>
</div>
<% end %>